<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvParticipantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:padding="10dp"
                app:cardBackgroundColor="#202020"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imageViewliPart"
                        android:layout_width="20dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="4dp"
                        app:srcCompat="@drawable/icon_participante"
                        tools:ignore="VectorDrawableCompat"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/txtNombreAutor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/imageViewliTel"
                        android:layout_width="20dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/icon_cel"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/txtCelular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/imageViewliEm"
                        android:layout_width="20dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="60dp"
                        app:srcCompat="@drawable/icon_email"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="10dp"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textStyle="normal" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>