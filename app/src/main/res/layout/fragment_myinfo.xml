<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.fragment_miinfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2d3e50"
        android:padding="5dp">

        <TextView
            style="TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="MY INFORMATION"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:padding="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/title_border">

                <TextView
                    style="TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="DATA"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/cid"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_cid"
                    android:drawablePadding="10dp"
                    android:hint="CID"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColorHint="@color/black"
                    app:drawableTint="#044e7d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/names_surnames"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_cid"
                    android:drawablePadding="10dp"
                    android:hint="NAMES AND SURNAMES"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColorHint="@color/black"
                    app:drawableTint="#044e7d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_cid"
                    android:drawablePadding="10dp"
                    android:hint="ADDRESS"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColorHint="@color/black"
                    app:drawableTint="#044e7d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_cid"
                    android:drawablePadding="10dp"
                    android:hint="PHONE"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColorHint="@color/black"
                    app:drawableTint="#044e7d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="240dp"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_cid"
                    android:drawablePadding="10dp"
                    android:hint="BIRTHDATE"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColorHint="@color/black"
                    app:drawableTint="#044e7d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/role"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="300dp"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_cid"
                    android:drawablePadding="10dp"
                    android:hint="ROLE"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColorHint="@color/black"
                    app:drawableTint="#044e7d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:padding="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCredenciales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/title_border">

                <TextView
                    style="TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="CREDENTIALS"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/icon_user"
                    android:drawablePadding="10dp"
                    android:hint="EMAIL"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColorHint="@color/black"
                    app:drawableTint="#044e7d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_baseline_lock_open_24"
                    android:drawablePadding="10dp"
                    android:hint="PASSWORD"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColorHint="@color/black"
                    app:drawableTint="#044e7d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>